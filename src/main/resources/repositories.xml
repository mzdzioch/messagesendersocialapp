<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <bean
        id="message1"
        class="com.zdzioch.message.domain.Message">
        <constructor-arg name="subject" value="some subject"/>
        <constructor-arg name="body" value="some body"/>
            <property name="id" value="1"/>
            <property name="to" value="javakrk5"/>
            <property name="from" value="zdzioch"/>
    </bean>

    <bean
            id="message2"
            class="com.zdzioch.message.domain.Message">
        <constructor-arg name="subject" value="any text"/>
        <constructor-arg name="body" value="body of message"/>
            <property name="id" value="1"/>
            <property name="to" value="google"/>
            <property name="from" value="misiek"/>
    </bean>

    <bean id="message3" class="com.zdzioch.message.domain.Message">
        <constructor-arg name="subject" value="subject"/>
        <constructor-arg name="body" value="text of body"/>
            <property name="id" value="1"/>
            <property name="from" value="me"/>
            <property name="to" value="somewhere"/>
    </bean>

    <bean
            id="messageRepository"
            class="com.zdzioch.message.repository.inmemory.InMemoryMessageRepository">
        <constructor-arg>
            <list>
                <ref bean="message1"/>
                <ref bean="message2"/>
                <ref bean="message3"/>
            </list>
        </constructor-arg>
    </bean>
</beans>