<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <bean
        id="message1"
        class="com.zdzioch.message.domain.Message">
        <constructor-arg name="subject" value="some subject"/>
        <constructor-arg name="body" value="some body"/>


    </bean>

    <bean
            id="messageRepository"
            class="com.zdzioch.message.repository.inmemory.InMemoryMessageRepository"/>
</beans>